<PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
            app:title="@string/history_header">

        <Preference
                app:key="history"
                app:title="@string/history_title"
                app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

    <PreferenceCategory
            app:title="@string/theme_header">

        <ListPreference
                app:key="theme"
                app:title="@string/theme_title"
                app:entries="@array/theme_entries"
                app:entryValues="@array/theme_values"
                app:defaultValue="system_default"
                app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

</PreferenceScreen>