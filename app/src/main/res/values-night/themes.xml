<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DLQuiz" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/somaiya_red</item>
        <item name="colorPrimaryVariant">@color/somaiya_red_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/dark_gray</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">@color/dark_gray</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:windowBackground">@color/dark_gray</item>
        <item name="android:colorBackground">@color/dark_gray</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="background">@drawable/bg_dark</item>
    </style>
</resources>